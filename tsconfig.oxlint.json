{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "openclaw": [
        "./src/index.ts"
      ],
      "openclaw/plugin-sdk": [
        "./src/plugin-sdk/index.ts"
      ],
      "openclaw/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "packages/**/*",
    "modules/**/*"
  ]
}