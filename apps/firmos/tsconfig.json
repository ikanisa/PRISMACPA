{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": false,
        "verbatimModuleSyntax": false,
        "paths": {
            "@firmos/modules": [
                "./modules/index.ts"
            ],
            "@firmos/modules/*": [
                "./modules/*/index.ts"
            ],
            "@firmos/schemas": [
                "./schemas/validation.ts"
            ],
            "@firmos/packages/*": [
                "./packages/*/index.ts"
            ]
        }
    },
    "include": [
        "modules/**/*.ts",
        "schemas/**/*.ts",
        "packages/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "apps/**/*"
    ]
}