{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://openclaw.ai/schema/resource_library.schema.json",
    "title": "FirmOS Resource Library",
    "description": "Schema for validating FirmOS resource library YAML files",
    "type": "object",
    "required": [
        "version",
        "name"
    ],
    "properties": {
        "version": {
            "type": "string",
            "pattern": "^[0-9]+\\.[0-9]+$"
        },
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "categories": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/category"
            }
        },
        "resources": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/resource"
            }
        }
    },
    "definitions": {
        "category": {
            "type": "object",
            "required": [
                "id",
                "name"
            ],
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                }
            }
        },
        "resource": {
            "type": "object",
            "required": [
                "id",
                "name",
                "type"
            ],
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "template",
                        "checklist",
                        "policy",
                        "reference",
                        "tool"
                    ]
                },
                "category": {
                    "type": "string"
                },
                "pack": {
                    "type": "string",
                    "enum": [
                        "GLOBAL",
                        "MT_TAX",
                        "MT_CSP_MBR",
                        "RW_TAX",
                        "RW_PRIVATE_NOTARY"
                    ]
                },
                "description": {
                    "type": "string"
                },
                "url": {
                    "type": "string",
                    "format": "uri"
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    }
}